@model IEnumerable<WebApplication1.Models.Usuario>

<h2>Gestionar faltas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NIF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EsVetado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NIF)
        </td>
        <td>
            @{
                if (item.EsVetado)
                {
                    <p>Sí</p>
                }
                else
                {
                    <p>No</p>
                }
            }
        </td>
        <td>
            @Html.ActionLink("Gestionar", "VerFaltas", new { email = item.Email })
        </td>
    </tr>
    }

</table>